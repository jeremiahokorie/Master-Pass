<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:weightSum="1"
    tools:context="com.crash.etranzact.masterpass.DashBoardActivity">

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="@color/Button"
        android:gravity="right"
        android:text="Logout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mcard" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#87AAFB"
            android:text="\n\n\n\n"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/Button"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/scanCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/qr_icon"
        android:gravity="center"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="SCAN FROM CAMERA" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/Button"
        android:layout_margin="8dp"/>


    <TextView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/upload_icon"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:text="UPLOAD FROM GALLERY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/Button"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="@color/Button"/>

</LinearLayout>
    </ScrollView>


